@page "/admin/"
@using BlazorApp.Components;
@using BlazorApp.Models;
@inject IModalService modal
@inject HttpClient client

<button @onclick="@AddShowModal" class="btn btn-primary">Tilføj produkt</button>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Billede</th>
            <th>Id</th>
            <th>Navn</th>
            <th>Fabrikat</th>
            <th>Kategori</th>
            <th>Pris</th>
            <th>Aktiv</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Products.Items != null)
        {
            @foreach (var product in Products.Items)
            {
                <tr>
                    <td><img src="@(product.Image != null ? $"data:image/png;base64, {product.Image}" : "/Images/image-not-found-icon.svg")" height="50" class="card-img" /></td>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.Manufacturer?.Name</td>
                    <td>@product.Category?.Name</td>
                    <td>@product.Price?.ToString("C2")</td>
                    <td>@(!product.Disabled)</td>
                    <td>
                        <div class="d-flex justify-content-center gap-3">
                            <button class="btn btn-warning" @onclick="() => EditShowModal(product)"><i class="bi bi-pencil-square"></i></button>
                            <button @onclick="() => DisableProduct(product.ProductId.Value)" class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<Pagination Parameters="Parameters" SelectedPage="SelectedPage"></Pagination>
