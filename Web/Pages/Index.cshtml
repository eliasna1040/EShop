@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="d-flex justify-content-center margin-top-150px">
    <div class="col-8">
        @foreach (var product in Model.Products)
        {
            <div class="card">
                <div class="card-body">
                    <div class="d-inline-block">
                        <img src="" class="card-img bg-secondary" />
                    </div>
                    <div class="d-inline-block">
                        <h5>@product.Name</h5>
                        <p>@product.Description</p>
                    </div>
                    <div class="d-inline-block float-end">
                        <h5>@product.Price.ToString("C2")</h5>
                        <form method="post" asp-page-handler="AddProduct" asp-route-productId="@product.ProductId">
                            <button class="btn btn-success col-12" type="submit"><i class="bi bi-bag-check"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        }
        <nav class="">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>
